@inject HttpClient _client
@page "/RelevantQuestions/{id:int}"

<div class="p-4 h-screen flex items-start justify-center bg-cover bg-center" style="background-image: url('/your-background-image.jpg');">
    @if (isNotFoundSource)
    {
        <div class="text-center text-4xl md:text-5xl font-bold text-white">
            <h1>
                404 Not Found!
            </h1>
        </div>
    }
    else
    {
        <div class="max-w-3xl w-full bg-white/90 backdrop-blur-md shadow-xl rounded-lg overflow-hidden border border-gray-200">
            <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white text-center py-4 px-6">
                <h1 class="text-2xl md:text-3xl font-bold">
                    @if (relevantQuestion is not null)
                    {
                        @relevantQuestion.QuestionDesceiption
                    }
                    else
                    {
                        <span>Loading...</span>
                    }
                </h1>
            </div>
            <div class="p-6">
                <p class="text-gray-800 text-lg leading-relaxed">
                    @if (relevantQuestion is not null)
                    {
                        @questionAnswer
                    }
                </p>
            </div>
        </div>
    }
</div>